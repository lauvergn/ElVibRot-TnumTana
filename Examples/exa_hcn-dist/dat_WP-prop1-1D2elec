          Rho1D=t Rho2D=t Rho_type=1 
          AvHiterm=t
          coherence=1 ExactFact=1 /

 &propa
        WPTmax=20. 'fs' WPdeltaT=1. 'fs' nb_micro=1

        n_WPecri=1 WPpsi2=t WPpsi=t Write_WPAdia=t

