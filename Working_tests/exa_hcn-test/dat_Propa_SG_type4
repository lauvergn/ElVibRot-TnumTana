 SYSTEM=sub_system_cos_hcn.f
 SYSTEM=sub_system_murrell.f

ici=`pwd`
DIR_vib=$ici/../..
DIR_pot=$DIR_vib/sub_pot

 cp $SYSTEM $DIR_pot/sub_system.f

cd $DIR_vib
 make
cd $ici

 x1=0.538516066
 x2=0.461483933


#export OMP_NUM_THREADS=1

LB=3
LG=4


nice $DIR_vib/vib << ** >res
